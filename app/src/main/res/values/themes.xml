<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Top level DayNight theme to be used in AndroidManifest.xml-->
    <style name="Theme.MyApp" parent="Base.Theme.MyApp" />

    <style name="Base.Theme.MyApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/dark_blue_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/dark_blue_200</item>
        <item name="colorSecondary">@color/orange_500</item>
        <item name="colorOnSecondary">?attr/colorOnPrimary</item>
        <item name="colorSecondaryVariant">@color/orange_200</item>
        <item name="colorSurface">@color/white_700</item>
        <item name="android:colorBackground">@color/white_700</item>
        <item name="colorOnBackground">@color/dark_blue_500</item>
        <item name="colorOnSurface">?attr/colorOnBackground</item>
        <item name="errorTextColor">@color/red_600</item>
        <item name="colorOnError">?attr/errorTextColor</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textColorHint">@color/dark_blue_200</item>

    </style>




</resources>